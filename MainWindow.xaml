<Window x:Class="Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local2="clr-namespace:Project.ViewModels"
        mc:Ignorable="d"
        Title="Subscription System"
        Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F3F4F6">

    <!-- ViewModel -->
    <Window.DataContext>
        <local2:MainViewModel />
    </Window.DataContext>

    <!-- ONE root layout -->
    <DockPanel LastChildFill="True">

        <!-- Header -->
        <Border DockPanel.Dock="Top"
                Background="#4F46E5"
                CornerRadius="0,0,10,10"
                Padding="15">
            <TextBlock Text="Welcome To Subscription System"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Menu -->
        <Menu DockPanel.Dock="Top"
              Background="#F9FAFB"
              FontSize="14"
              FontWeight="SemiBold">

            <MenuItem Header="Email"
                      Command="{Binding ShowEmailCommand}" />
            <MenuItem Header="Domain"
                      Command="{Binding ShowDomainCommand}" />
            <MenuItem Header="Software"
                      Command="{Binding ShowSoftwareCommand}" />
        </Menu>

        <!-- MAIN CONTENT (THIS IS WHERE VIEWS CHANGE) -->
        <ContentControl Content="{Binding CurrentView}"
                        Margin="10"/>

    </DockPanel>

</Window>
