<Window x:Class="Project.Services.Email"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Email User"
        Height="600"
        Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F3F4F6">
    <Window.Resources>

        <Style x:Key="ElegantButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="44"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#4F46E5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>

            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                            CornerRadius="10"
                            Background="{TemplateBinding Background}">
                            <Border.Effect>
                                <DropShadowEffect
                                BlurRadius="0"
                                ShadowDepth="0"
                                Opacity="0"/>
                            </Border.Effect>

                            <ContentPresenter
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>

                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>

                                            <!-- Scale -->
                                            <DoubleAnimation
                                            Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                            To="1.04"
                                            Duration="0:0:0.15"/>
                                            <DoubleAnimation
                                            Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                            To="1.04"
                                            Duration="0:0:0.15"/>

                                            <!-- Shadow -->
                                            <DoubleAnimation
                                            Storyboard.TargetName="border"
                                            Storyboard.TargetProperty="Effect.(DropShadowEffect.BlurRadius)"
                                            To="18"
                                            Duration="0:0:0.15"/>
                                            <DoubleAnimation
                                            Storyboard.TargetName="border"
                                            Storyboard.TargetProperty="Effect.(DropShadowEffect.Opacity)"
                                            To="0.35"
                                            Duration="0:0:0.15"/>

                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>

                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>

                                            <!-- Reset scale -->
                                            <DoubleAnimation
                                            Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                            To="1"
                                            Duration="0:0:0.15"/>
                                            <DoubleAnimation
                                            Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                            To="1"
                                            Duration="0:0:0.15"/>

                                            <!-- Remove shadow -->
                                            <DoubleAnimation
                                            Storyboard.TargetName="border"
                                            Storyboard.TargetProperty="Effect.(DropShadowEffect.BlurRadius)"
                                            To="0"
                                            Duration="0:0:0.15"/>
                                            <DoubleAnimation
                                            Storyboard.TargetName="border"
                                            Storyboard.TargetProperty="Effect.(DropShadowEffect.Opacity)"
                                            To="0"
                                            Duration="0:0:0.15"/>

                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>

                            <!-- Pressed -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>


    <Grid>
        <Border Width="650"
                Padding="30"
                CornerRadius="16"
                Background="White"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">

            <Grid>
                <!-- Rows -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,25">
                    <TextBlock Text="Email User"
                               FontSize="22"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>

                    <TextBlock Text="Please enter user details below"
                               FontSize="13"
                               Foreground="Gray"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Form -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <!-- LEFT -->
                    <StackPanel Grid.Column="0" Margin="0,0,15,0">

                        <TextBlock Text="First Name"/>
                        <TextBox x:Name="txtFName"
                                 Height="40"
                                 Margin="0,6,0,16"
                                 Padding="10"
                                 ToolTip="Enter First Name"
                                 PreviewTextInput="OnlyLetters"/>

                        <TextBlock Text="Email Address"/>
                        <TextBox x:Name="txtEmail"
                                 Height="40"
                                 Margin="0,6,0,16"
                                 ToolTip="Enter Email"
                                 Padding="10"/>

                        <TextBlock Text="Storage (GB)"/>
                        <TextBox x:Name="txtStorage"
                                 Height="40"
                                 Margin="0,6,0,16"
                                 Padding="10"
                                 ToolTip="Enter Storage"/>
                    </StackPanel>

                    <!-- RIGHT -->
                    <StackPanel Grid.Column="1" Margin="15,0,0,0">

                        <TextBlock Text="Last Name"/>
                        <TextBox x:Name="txtLName"
                                 Height="40"
                                 Margin="0,6,0,16"
                                 Padding="10"
                                 ToolTip="Enter Last Name"
                                 PreviewTextInput="OnlyLetters"/>

                        <TextBlock Text="Company"/>
                        <TextBox x:Name="txtcompany"
                                 Height="40"
                                 Margin="0,6,0,16"
                                 Padding="10"
                                 ToolTip="Enter Company Name"
                                 PreviewTextInput="OnlyLetters"/>

                        <TextBlock Text="Password"/>
                        <PasswordBox x:Name="txtpassword"
                                     Height="40"
                                     Margin="0,6,0,16"
                                     ToolTip="Enter Password"
                                     Padding="10"/>
                    </StackPanel>
                </Grid>

                <!-- Submit -->
                <Button Grid.Row="2"
        Content="Create User"
        Style="{StaticResource ElegantButtonStyle}"
        Margin="0,15,0,0"
        Click="Submit_Click"/>


            </Grid>
        </Border>
    </Grid>
</Window>
