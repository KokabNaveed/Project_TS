<Window x:Class="Project.Services.Email"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project.Services"
        mc:Ignorable="d"
               Title="Email"
        Height="600"
        Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border Width="620"
                Padding="25"
                CornerRadius="14"
                Background="White"
                VerticalAlignment="Center"
                HorizontalAlignment="Center" Grid.Column="1">

            <Grid>
                <!-- Columns -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Rows -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Header -->
                    <RowDefinition Height="Auto"/>
                    <!-- Fields -->
                    <RowDefinition Height="Auto"/>
                    <!-- Button -->
                </Grid.RowDefinitions>

                <!-- HEADER -->
                <StackPanel Grid.ColumnSpan="2" Margin="0,0,0,20">
                    <TextBlock Text="Email User"
                               FontSize="20"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>

                    <TextBlock Text="Enter your details"
                               FontSize="12"
                               Foreground="Gray"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- LEFT COLUMN -->
                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,15,0">

                    <TextBlock Text="First Name" FontSize="12"/>
                    <TextBox x:Name="txtFName"
                             Height="38"
                             Margin="0,6,0,14"
                             Padding="10"
                             PreviewTextInput="OnlyLetters"/>

                    <TextBlock Text="Email Address" FontSize="12"/>
                    <TextBox x:Name="txtEmail"
                             Height="38"
                             Margin="0,6,0,14"
                             Padding="10"/>

                    <TextBlock Text="Storage (GB)" FontSize="12"/>
                    <TextBox x:Name="txtStorage"
                             Height="38"
                             Margin="0,6,0,14"
                             Padding="10"/>
                </StackPanel>

                <!-- RIGHT COLUMN -->
                <StackPanel Grid.Row="1" Grid.Column="1" Margin="15,0,0,0">

                    <TextBlock Text="Last Name" FontSize="12"/>
                    <TextBox x:Name="txtLName"
                             Height="38"
                             Margin="0,6,0,14"
                             Padding="10"
                             PreviewTextInput="OnlyLetters"/>

                    <TextBlock Text="Company" FontSize="12"/>
                    <TextBox x:Name="txtcompany"
                             Height="38"
                             Margin="0,6,0,14"
                             Padding="10"
                             PreviewTextInput="OnlyLetters"/>

                    <TextBlock Text="Password" FontSize="12"/>
                    <PasswordBox x:Name="txtpassword"
                                 Height="38"
                                 Margin="0,6,0,14"
                                 Padding="10"/>
                </StackPanel>

                <!-- SUBMIT BUTTON -->
                <Button Grid.Row="2"
                        Grid.ColumnSpan="2"
                        Content="SUBMIT"
                        Height="42"
                        Margin="0,10,0,0"
                        Background="#4F46E5"
                        Foreground="White"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="Submit_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
