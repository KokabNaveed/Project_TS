<UserControl x:Class="Project.Views.EmailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Project.Views"
             mc:Ignorable="d"
             Height="800"
             Width="800"
             Background="#F3F4F6">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">

            <!-- FORM BORDER -->
            <Border Width="650"
                    Padding="30"
                    CornerRadius="16"
                    Background="White"
                    Margin="0,0,0,20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,25">
                        <TextBlock Text="Email User"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Please enter user details below"
                                   FontSize="13"
                                   Foreground="Gray"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Form -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <!-- LEFT -->
                        <StackPanel Grid.Column="0" Margin="0,0,15,0">
                            <TextBlock Text="First Name"/>
                            <TextBox Text="{Binding User.FirstName, UpdateSourceTrigger=PropertyChanged}"
                                     Height="40" Margin="0,6,0,16" Padding="10"
                                     Style="{StaticResource PlaceholderTextBoxStyle}"
                                     Tag="Patrik"/>

                            <TextBlock Text="Email Address"/>
                            <TextBox Text="{Binding User.EmailAddress, UpdateSourceTrigger=PropertyChanged}"
                                     Height="40" Margin="0,6,0,16" Padding="10"
                                     Style="{StaticResource PlaceholderTextBoxStyle}"
                                     Tag="e.g. user@example.com"/>

                            <TextBlock Text="Storage (GB)"/>
                            <TextBox Text="{Binding User.StorageGB, UpdateSourceTrigger=PropertyChanged}"
                                     Height="40" Margin="0,6,0,16" Padding="10"
                                     Style="{StaticResource PlaceholderTextBoxStyle}"
                                     Tag="Storage in GB"/>
                        </StackPanel>

                        <!-- RIGHT -->
                        <StackPanel Grid.Column="1" Margin="15,0,0,0">
                            <TextBlock Text="Last Name"/>
                            <TextBox Text="{Binding User.LastName, UpdateSourceTrigger=PropertyChanged}"
                                     Height="40" Margin="0,6,0,16" Padding="10"
                                     Style="{StaticResource PlaceholderTextBoxStyle}"
                                     Tag="Jhon"/>

                            <TextBlock Text="Company"/>
                            <TextBox Text="{Binding User.Company, UpdateSourceTrigger=PropertyChanged}"
                                     Height="40" Margin="0,6,0,16" Padding="10"
                                     Style="{StaticResource PlaceholderTextBoxStyle}"
                                     Tag="e.g. Microsoft"/>

                            <StackPanel>
                                <TextBlock Text="Password"/>
                                <Grid>
                                    <Border Height="40"
                                            CornerRadius="8" 
                                            Background="White" 
                                            BorderBrush="#D1D5DB" 
                                            BorderThickness="1"   
                                            Margin="0,6,0,16">
                                        <PasswordBox x:Name="TxtPassword"
                                                     Padding="10"
                                                     Background="Transparent"
                                                     BorderThickness="0"
                                                     VerticalContentAlignment="Center"
                                                     PasswordChanged="TxtPassword_PasswordChanged"/>
                                    </Border>
                                    <TextBlock x:Name="PasswordPlaceholder"
                                               Text="Enter Password"
                                               Foreground="#9CA3AF"
                                               Height="25"
                                               Margin="12,0,0,0"
                                               VerticalAlignment="Center"
                                               IsHitTestVisible="False"/>
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </Grid>

                    <!-- Submit -->
                    <Button Grid.Row="2"
                            Content="Create User"
                            Style="{StaticResource ElegantButtonStyle}"
                            Margin="0,15,0,0"
                            Command="{Binding SubmitCommand}"/>
                </Grid>
            </Border>

            <!-- GRID OF ALL EMAILS -->
            <DataGrid ItemsSource="{Binding EmailList}" AutoGenerateColumns="False"
                      CanUserAddRows="False" Width="750" Height="250"
                      RowHeight="30" HeadersVisibility="Column" Margin="0,0,0,20">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                    <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" Width="*"/>
                    <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" Width="*"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding EmailAddress}" Width="*"/>
                    <DataGridTextColumn Header="Company" Binding="{Binding Company}" Width="*"/>
                    <DataGridTextColumn Header="Storage (GB)" Binding="{Binding StorageGB}" Width="80"/>
                    <DataGridTemplateColumn Header="Actions" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="Edit"
                                            Command="{Binding DataContext.EditUserCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}" Margin="5,0"/>
                                    <Button Content="Delete"
                                            Command="{Binding DataContext.DeleteUserCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}" Margin="5,0"
                                            Background="#EF4444" Foreground="White"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

        </StackPanel>
    </Grid>
</UserControl>
