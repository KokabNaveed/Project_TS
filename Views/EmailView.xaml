<UserControl x:Class="Project.Views.EmailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Project.Views"
             mc:Ignorable="d"
             Height="600"
             Width="800"
             Background="#F3F4F6">

    <UserControl.Resources>

        <Style x:Key="ElegantButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="44"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#4F46E5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>

            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                            CornerRadius="10"
                            Background="{TemplateBinding Background}">
                            <Border.Effect>
                                <DropShadowEffect
                                BlurRadius="0"
                                ShadowDepth="0"
                                Opacity="0"/>
                            </Border.Effect>

                            <ContentPresenter
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>

                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>

                                            <!-- Scale -->
                                            <DoubleAnimation
                                            Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                            To="1.04"
                                            Duration="0:0:0.15"/>
                                            <DoubleAnimation
                                            Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                            To="1.04"
                                            Duration="0:0:0.15"/>

                                            <!-- Shadow -->
                                            <DoubleAnimation
                                            Storyboard.TargetName="border"
                                            Storyboard.TargetProperty="Effect.(DropShadowEffect.BlurRadius)"
                                            To="18"
                                            Duration="0:0:0.15"/>
                                            <DoubleAnimation
                                            Storyboard.TargetName="border"
                                            Storyboard.TargetProperty="Effect.(DropShadowEffect.Opacity)"
                                            To="0.35"
                                            Duration="0:0:0.15"/>

                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>

                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>

                                            <!-- Reset scale -->
                                            <DoubleAnimation
                                            Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                            To="1"
                                            Duration="0:0:0.15"/>
                                            <DoubleAnimation
                                            Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                            To="1"
                                            Duration="0:0:0.15"/>

                                            <!-- Remove shadow -->
                                            <DoubleAnimation
                                            Storyboard.TargetName="border"
                                            Storyboard.TargetProperty="Effect.(DropShadowEffect.BlurRadius)"
                                            To="0"
                                            Duration="0:0:0.15"/>
                                            <DoubleAnimation
                                            Storyboard.TargetName="border"
                                            Storyboard.TargetProperty="Effect.(DropShadowEffect.Opacity)"
                                            To="0"
                                            Duration="0:0:0.15"/>

                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>

                            <!-- Pressed -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox Placeholder Style -->
        <Style x:Key="PlaceholderTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <Border BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8"
                            Background="{TemplateBinding Background}"/>

                            <ScrollViewer x:Name="PART_ContentHost"
                                  Margin="8,0,0,0"/>

                            <!-- Placeholder -->
                            <TextBlock Text="{TemplateBinding Tag}"
                               Foreground="#9CA3AF"
                               Margin="12,0,0,0"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"
                               Visibility="Collapsed"
                               x:Name="Placeholder"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="Placeholder"
                                Property="Visibility"
                                Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>


    <Grid>
        <Border Width="650"
                Padding="30"
                CornerRadius="16"
                Background="White"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">

            <Grid>
                <!-- Rows -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,25">
                    <TextBlock Text="Email User"
                               FontSize="22"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>

                    <TextBlock Text="Please enter user details below"
                               FontSize="13"
                               Foreground="Gray"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Form -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <!-- LEFT -->
                    <StackPanel Grid.Column="0" Margin="0,0,15,0">

                        <TextBlock Text="First Name"/>
                        <TextBox Text="{Binding User.FirstName, UpdateSourceTrigger=PropertyChanged}"
                                 Height="40"
                                 Margin="0,6,0,16"
                                 Padding="10"
                                 ToolTip="Enter First Name"
                                 Style="{StaticResource PlaceholderTextBoxStyle}"
                                 Tag="Patrik"/>

                        <TextBlock Text="Email Address"/>
                        <TextBox Text="{Binding User.EmailAddress, UpdateSourceTrigger=PropertyChanged}"
                                 Height="40"
                                 Margin="0,6,0,16"
                                 ToolTip="Enter Email"
                                 Padding="10"
                                 Style="{StaticResource PlaceholderTextBoxStyle}"
                                 Tag="e.g. user@example.com"/>

                        <TextBlock Text="Storage (GB)"/>
                        <TextBox Text="{Binding User.StorageGB, UpdateSourceTrigger=PropertyChanged}"
                                 Height="40"
                                 Margin="0,6,0,16"
                                 Padding="10"
                                 ToolTip="Enter Storage" 
                                 Style="{StaticResource PlaceholderTextBoxStyle}"
                                 Tag="Storage in GB"/>
                    </StackPanel>

                    <!-- RIGHT -->
                    <StackPanel Grid.Column="1" Margin="15,0,0,0">

                        <TextBlock Text="Last Name"/>
                        <TextBox Text="{Binding User.LastName, UpdateSourceTrigger=PropertyChanged}"
                                 Height="40"
                                 Margin="0,6,0,16"
                                 Padding="10"
                                 ToolTip="Enter Last Name"                                
                                 Style="{StaticResource PlaceholderTextBoxStyle}"
                                 Tag="Jhon"/>

                        <TextBlock Text="Company"/>
                        <TextBox Text="{Binding User.Company, UpdateSourceTrigger=PropertyChanged}"
                                 Height="40"
                                 Margin="0,6,0,16"
                                 Padding="10"
                                 ToolTip="Enter Company Name"                                    
                                 Style="{StaticResource PlaceholderTextBoxStyle}"
                                 Tag="e.g. Microsoft"/>

                        <!-- Password -->
                        <StackPanel>
                            <TextBlock Text="Password"/>
                            <Grid>
                                <Border Height="40"
                                        CornerRadius="8" 
                                        Background="White" 
                                        BorderBrush="#D1D5DB" 
                                        BorderThickness="1"   
                                        Margin="0,6,0,16">
                                    <PasswordBox x:Name="TxtPassword"
                                                 Padding="10"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 VerticalContentAlignment="Center"
                                                 PasswordChanged="TxtPassword_PasswordChanged"/>
                                </Border>
                                <!-- Placeholder Text -->
                                <TextBlock x:Name="PasswordPlaceholder"
                                           Text="Enter Password"
                                           Foreground="#9CA3AF"
                                           Height="25"
                                           Margin="12,0,0,0"
                                           VerticalAlignment="Center"
                                           IsHitTestVisible="False"/>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <!-- Submit -->
                <Button Grid.Row="2"
                        Content="Create User"
                        Style="{StaticResource ElegantButtonStyle}"
                        Margin="0,15,0,0"
                        Command="{Binding CreateUserCommand}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
