<UserControl x:Class="Project.Views.EmailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Project.Views"
             mc:Ignorable="d"
             Height="600"
             Width="800"
             Background="#F3F4F6">

    <Grid>
        <Border Width="650"
                Padding="30"
                CornerRadius="16"
                Background="White"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">

            <Grid>
                <!-- Rows -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,25">
                    <TextBlock Text="Email User"
                               FontSize="22"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>

                    <TextBlock Text="Please enter user details below"
                               FontSize="13"
                               Foreground="Gray"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Form -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <!-- LEFT -->
                    <StackPanel Grid.Column="0" Margin="0,0,15,0">

                        <TextBlock Text="First Name"/>
                        <TextBox Text="{Binding User.FirstName, UpdateSourceTrigger=PropertyChanged}"
                                 Height="40"
                                 Margin="0,6,0,16"
                                 Padding="10"
                                 ToolTip="Enter First Name"
                                 Style="{StaticResource PlaceholderTextBoxStyle}"
                                 Tag="Patrik"/>

                        <TextBlock Text="Email Address"/>
                        <TextBox Text="{Binding User.EmailAddress, UpdateSourceTrigger=PropertyChanged}"
                                 Height="40"
                                 Margin="0,6,0,16"
                                 ToolTip="Enter Email"
                                 Padding="10"
                                 Style="{StaticResource PlaceholderTextBoxStyle}"
                                 Tag="e.g. user@example.com"/>

                        <TextBlock Text="Storage (GB)"/>
                        <TextBox Text="{Binding User.StorageGB, UpdateSourceTrigger=PropertyChanged}"
                                 Height="40"
                                 Margin="0,6,0,16"
                                 Padding="10"
                                 ToolTip="Enter Storage" 
                                 Style="{StaticResource PlaceholderTextBoxStyle}"
                                 Tag="Storage in GB"/>
                    </StackPanel>

                    <!-- RIGHT -->
                    <StackPanel Grid.Column="1" Margin="15,0,0,0">

                        <TextBlock Text="Last Name"/>
                        <TextBox Text="{Binding User.LastName, UpdateSourceTrigger=PropertyChanged}"
                                 Height="40"
                                 Margin="0,6,0,16"
                                 Padding="10"
                                 ToolTip="Enter Last Name"                                
                                 Style="{StaticResource PlaceholderTextBoxStyle}"
                                 Tag="Jhon"/>

                        <TextBlock Text="Company"/>
                        <TextBox Text="{Binding User.Company, UpdateSourceTrigger=PropertyChanged}"
                                 Height="40"
                                 Margin="0,6,0,16"
                                 Padding="10"
                                 ToolTip="Enter Company Name"                                    
                                 Style="{StaticResource PlaceholderTextBoxStyle}"
                                 Tag="e.g. Microsoft"/>

                        <!-- Password -->
                        <StackPanel>
                            <TextBlock Text="Password"/>
                            <Grid>
                                <Border Height="40"
                                        CornerRadius="8" 
                                        Background="White" 
                                        BorderBrush="#D1D5DB" 
                                        BorderThickness="1"   
                                        Margin="0,6,0,16">
                                    <PasswordBox x:Name="TxtPassword"
                                                 Padding="10"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 VerticalContentAlignment="Center"
                                                 PasswordChanged="TxtPassword_PasswordChanged"/>
                                </Border>
                                <!-- Placeholder Text -->
                                <TextBlock x:Name="PasswordPlaceholder"
                                           Text="Enter Password"
                                           Foreground="#9CA3AF"
                                           Height="25"
                                           Margin="12,0,0,0"
                                           VerticalAlignment="Center"
                                           IsHitTestVisible="False"/>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <!-- Submit -->
                <Button Grid.Row="2"
                        Content="Create User"
                        Style="{StaticResource ElegantButtonStyle}"
                        Margin="0,15,0,0"
                        Command="{Binding CreateUserCommand}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
