<UserControl x:Class="Project.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Project.Views"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">


    <Grid>

        <!-- MAIN CONTENT -->
        <ScrollViewer Background="#F9FAFB" Padding="20">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <Border Background="White" CornerRadius="10" Padding="20" Width="180" Height="100" Margin="10" 
                            Effect="{DynamicResource DropShadowEffect}">
                        <StackPanel>
                            <TextBlock Text="Total Emails" FontWeight="Bold" FontSize="16" Foreground="#374151"/>
                            <TextBlock Text="{Binding TotalEmails}" FontSize="24" FontWeight="Bold" Foreground="#4F46E5"/>
                        </StackPanel>
                    </Border>
                    <Border Background="White" CornerRadius="10" Padding="20" Width="180" Height="100" Margin="10"
                            Effect="{DynamicResource DropShadowEffect}">
                        <StackPanel>
                            <TextBlock Text="Total Software" FontWeight="Bold" FontSize="16" Foreground="#374151"/>
                            <TextBlock Text="{Binding TotalSoftware}" FontSize="24" FontWeight="Bold" Foreground="#4F46E5"/>
                        </StackPanel>
                    </Border>
                    <Border Background="White" CornerRadius="10" Padding="20" Width="180" Height="100" Margin="10"
                            Effect="{DynamicResource DropShadowEffect}">
                        <StackPanel>
                            <TextBlock Text="Total Domains" FontWeight="Bold" FontSize="16" Foreground="#374151"/>
                            <TextBlock Text="{Binding TotalDomain}" FontSize="24" FontWeight="Bold" Foreground="#4F46E5"/>
                        </StackPanel>
                    </Border>
                </StackPanel>



                <StackPanel Orientation="Vertical" Margin="0,20,0,0">

                    <!-- ComboBoxes -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                        <StackPanel Margin="10">
                            <TextBlock Text="Select Type" FontWeight="Bold"/>
                            <ComboBox Width="150" ItemsSource="{Binding ExpiringTypes}" SelectedItem="{Binding SelectedExpiringType}" />
                        </StackPanel>

                        <StackPanel Margin="10">
                            <TextBlock Text="Select Period" FontWeight="Bold"/>
                            <ComboBox Width="150" ItemsSource="{Binding ExpiringPeriods}" SelectedItem="{Binding SelectedExpiringPeriod}" />
                        </StackPanel>
                    </StackPanel>

                    <!-- Grid -->
                    <DataGrid ItemsSource="{Binding FilteredExpiringSubscriptions}" AutoGenerateColumns="False"
              CanUserAddRows="False" RowHeight="30" GridLinesVisibility="Horizontal" 
              HorizontalAlignment="Stretch" HeadersVisibility="Column" Height="300">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding DisplayName}" Width="*"/>
                            <DataGridTextColumn Header="Renewal Date" Binding="{Binding RenewalDate, StringFormat=dd MMM yyyy}" Width="120"/>
                            <DataGridTextColumn Header="Days Remaining" Binding="{Binding DaysRemaining}" Width="120"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>

                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>

</UserControl>
