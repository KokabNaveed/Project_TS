<Window x:Class="Project.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local2="clr-namespace:Project.ViewModels"
        Title="Subscription System"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#F3F4F6"
        ResizeMode="NoResize">

    <!-- ViewModel -->
    <Window.DataContext>
        <local2:MainViewModel />
    </Window.DataContext>

    <DockPanel LastChildFill="True">

        <!-- HEADER -->
        <Border DockPanel.Dock="Top"
                Background="#4F46E5"
                Padding="15"
                CornerRadius="0,0,10,10">
            <Grid>
                <TextBlock Text="Welcome to Subscription System"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- SIDEBAR -->
        <StackPanel DockPanel.Dock="Left"
                    Width="220"
                    Background="White"
                    >

            <TextBlock Text="MENU"
                       FontWeight="Bold"
                       FontSize="14"
                       Foreground="#4B5563"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,15"/>

            <Button Content="Home"
                    Style="{StaticResource ElegantButtonStyle}"
                    Command="{Binding ShowHomeCommand}"
                    Margin="0,5,0,0"/>
            <Button Content="Email" Style="{StaticResource ElegantButtonStyle}" Command="{Binding ShowEmailCommand}" Margin="0,5,0,0"/>

            <!-- Software -->
            <Button Content="Software" Style="{StaticResource ElegantButtonStyle}" Command="{Binding ShowSoftwareCommand}" Margin="0,5,0,0"/>

            <!-- Domain -->
            <Button Content="Domain" Style="{StaticResource ElegantButtonStyle}" Command="{Binding ShowDomainCommand}" Margin="0,5,0,0"/>

            <Button Content="Exit"
                    Style="{StaticResource ElegantButtonStyle}"
                    Background="#EF4444"
                    Foreground="White"
                    FontWeight="Bold"
                    Margin="0,5,0,0"
                    Command="{Binding LogoutCommand}"/>
        </StackPanel>

        <!-- MAIN CONTENT -->
        <ScrollViewer Background="#F9FAFB" Padding="20">
            <StackPanel Orientation="Vertical">
                <ContentControl Content="{Binding CurrentView}" />
            </StackPanel>
        </ScrollViewer>

    </DockPanel>
</Window>
