<UserControl x:Class="Project.Views.SoftwareView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Project.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Height="800"
             Width="800"
             Background="#F3F4F6">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <Border Width="650"
                Padding="30"
                CornerRadius="16"
                Background="White"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">

                <Grid>
                    <!-- Columns -->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Rows -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Header -->
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <!-- Button -->
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <StackPanel Grid.ColumnSpan="2" Margin="0,0,0,20">
                        <TextBlock Text="Software Subscription"
                            FontSize="20"
                            FontWeight="Bold"
                            HorizontalAlignment="Center"/>

                        <TextBlock Text="Enter Your Details and Choose Plan"
                            FontSize="12"
                            Foreground="Gray"
                            HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- LEFT COLUMN -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,15,0">
                        <TextBlock Text="Software Name" FontSize="12"/>
                        <TextBox Text="{Binding Software.SoftwareName, UpdateSourceTrigger=PropertyChanged}"
                             Height="40" 
                             Margin="0,6,0,14" 
                             Padding="10" 
                             ToolTip="Enter Software Name"
                             Style="{StaticResource PlaceholderTextBoxStyle}" 
                             Tag="e.g. Microsoft Office"/>

                        <TextBlock Text="Plan Type" FontSize="12"/>
                        <Border CornerRadius="8" 
                            BorderBrush="#D1D5DB" 
                            BorderThickness="1" 
                            Background="White"
                            Height="40"
                            Margin="0,6,0,14">
                            <ComboBox
                            ItemsSource="{Binding PlanTypes}"
                            SelectedItem="{Binding Software.PlanType}"
                            Padding="10,4"
                            Background="Transparent"
                            BorderThickness="0" ToolTip="Select Plan Type">
                            </ComboBox>
                        </Border>


                        <TextBlock Text="Email Subscribed With" FontSize="12"/>
                        <TextBox Text="{Binding Software.Email, UpdateSourceTrigger=PropertyChanged}"
                             Height="40"
                             ToolTip="Enter Email" 
                             Margin="0,6,0,14" 
                             Padding="10" 
                             Style="{StaticResource PlaceholderTextBoxStyle}" 
                             Tag="e.g. user@example.com"/>

                        <TextBlock Text="Renewal Date" FontSize="12"/>
                        <Border CornerRadius="8" 
                               BorderBrush="#D1D5DB" 
                               BorderThickness="1" 
                               Background="White"
                               Height="40" Margin="0,6,0,14">
                            <DatePicker SelectedDate="{Binding Software.RenewalDate}" 
                                    ToolTip="Select Renewal Date" 
                                    SelectedDateFormat="Short"  
                                    Margin="2"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    VerticalContentAlignment="Center"/>
                        </Border>
                    </StackPanel>

                    <!-- RIGHT COLUMN -->
                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="15,0,0,0">
                        <TextBlock Text="Category" FontSize="12"/>
                        <Border CornerRadius="8" 
                            BorderBrush="#D1D5DB" 
                            BorderThickness="1" 
                            Background="White"
                            Height="40"
                            Margin="0,6,0,14">
                            <ComboBox ItemsSource="{Binding Categories}"
                                  SelectedItem="{Binding Software.Category}"
                                  Padding="10,4"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  IsEditable="False"
                                  ToolTip="Select Category">
                            </ComboBox>
                        </Border>

                        <TextBlock Text="Amount($)" FontSize="12"/>
                        <TextBox Text="{Binding Software.Amount, UpdateSourceTrigger=PropertyChanged}"
                             Height="40" 
                             Margin="0,6,0,14"
                             Padding="10" 
                             Style="{StaticResource PlaceholderTextBoxStyle}" 
                             Tag="Amount in USD"/>

                        <TextBlock Text="Subscribed Date" FontSize="12"/>
                        <Border CornerRadius="8" 
                            BorderBrush="#D1D5DB" 
                            BorderThickness="1" 
                            Background="White"
                            Height="40"
                            Margin="0,6,0,14">
                            <DatePicker SelectedDate="{Binding Software.SubscribedDate}"
                                    ToolTip="Select Subscribed Date" 
                                    Margin="2"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    VerticalContentAlignment="Center"
                                    SelectedDateFormat="Short"/>
                        </Border>
                    </StackPanel>

                    <!-- SUBMIT BUTTON -->
                    <Button Grid.Row="5"
                     Grid.ColumnSpan="2"
                     Margin="0,15,0,0"
                     Content="SUBMIT"
                     Style="{StaticResource ElegantButtonStyle}"
                     Cursor="Hand"
                     Command="{Binding SubmitCommand}"/>
                </Grid>
            </Border>
            <DataGrid ItemsSource="{Binding SoftwareList}" AutoGenerateColumns="False"
                      CanUserAddRows="False" Width="750" Height="250"
                      RowHeight="30" HeadersVisibility="Column" Margin="0,0,0,20">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                    <DataGridTextColumn Header="Software" Binding="{Binding SoftwareName}" Width="*"/>
                    <DataGridTextColumn Header="Plan" Binding="{Binding PlanType}" Width="*"/>
                    <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="*"/>
                    <DataGridTextColumn Header="Amount" Binding="{Binding Amount}" Width="*"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                    <DataGridTextColumn Header="Subscribed Date" Binding="{Binding SubscribedDate}" Width="*"/>
                    <DataGridTextColumn Header="Renewal Date" Binding="{Binding RenewalDate}" Width="*"/>

                    <DataGridTemplateColumn Header="Actions" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="Edit"
                                            Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}" Margin="5,0"/>
                                    <Button Content="Delete"
                                            Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}" Margin="5,0"
                                            Background="#EF4444" Foreground="White"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</UserControl>
