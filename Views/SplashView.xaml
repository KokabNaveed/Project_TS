<Window x:Class="Project.Views.SplashView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Height="300"
        Width="500"
        Title="Subscription System"
        WindowStartupLocation="CenterScreen">

    <!-- Card -->
    <Border CornerRadius="16"
            Background="White"
            Padding="24"
            BorderBrush="#E5E7EB"
            BorderThickness="1">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Content -->
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center">

                <TextBlock Text="Subscription System"
                           FontSize="26"
                           FontWeight="SemiBold"
                           Foreground="#111827"
                           HorizontalAlignment="Center"/>

                <TextBlock Text="Loading, please wait…"
                           FontSize="13"
                           Foreground="#6B7280"
                           Margin="0,8,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Progress -->
            <ProgressBar Grid.Row="1"
                         Height="6"
                         Margin="40,20,40,0"
                         IsIndeterminate="True"
                         Background="#F3F4F6"
                         Foreground="#2563EB"
                         BorderThickness="0"/>
        </Grid>
    </Border>
</Window>
